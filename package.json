{
  "name": "tasker",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "turbo run format:check",
    "format:fix": "turbo run format:fix",
    "typecheck": "turbo run typecheck",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && riimraf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.4",
  "lint-staged": {
    "**/*.go": [
      "gofmt -w",
      "goimports -w"
    ],
    "**/*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
